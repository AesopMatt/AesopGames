{% if mobile != true %}
    {% for perk in perks %}
        <div class="panel panel-default text-left">
            <div class="panel-heading">
                <h3 class="panel-title">{{ perk.title }}</h3>
            </div>
            <div class="panel-body">
                <img src="{{ asset( perk.image|replace({'png':'svg'}) ) }}" onerror="{{ asset( perk.image ) }}" class="img-rounded" style="width: 100%; margin-left:auto;margin-right:auto; margin-top: 10px; margin-bottom: 10px; display:block">
                {{ perk.desc }}
            </div>
        </div>
    {% endfor %}
{% else %}
    {% for perk in perks %}
        <div class="panel panel-default text-left">
            <div class="panel-heading">
                <h3 class="panel-title">{{ perk.title }}</h3>
            </div>
            <div class="panel-body">
                {% if android_chrome == false %}
                    <img src="{{ asset( perk.image|replace({'png':'svg'}) ) }}" onerror="{{ asset( perk.image ) }}" class="img-rounded" style="width: 100%; max-width: 350px; margin-left:auto;margin-right:auto; margin-top: 10px; margin-bottom: 10px; display:block">
                {% else %}
                    <img src="{{ asset( perk.image ) }}" class="img-rounded" style="width: 100%; max-width: 350px; margin-left:auto;margin-right:auto; margin-top: 10px; margin-bottom: 10px; display:block">
                {% endif %}
                {{ perk.desc }}
            </div>
        </div>
    {% endfor %}
{% endif %}