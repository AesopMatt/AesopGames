{% if mobile != true %}
    {% for perk in perks %}
        <div class="panel panel-default text-left">
            <div class="panel-heading">
                <h3 class="panel-title">{{ perk.title }}</h3>
            </div>
            <div class="panel-body">
                <img src="{{ asset( perk.image|replace({'png':'svg'}) ) }}" onerror="{{ asset( perk.image ) }}" class="img-rounded" style="width: 100%; margin-left:auto;margin-right:auto; margin-top: 10px; margin-bottom: 10px; display:block">
                {{ perk.desc }}
            </div>
        </div>
    {% endfor %}
{% else %}
    {% for perk in perks %}
        <div class="panel panel-default text-left">
            <div class="panel-heading">
                <h3 class="panel-title">{{ perk.title }}</h3>
            </div>
            <div class="panel-body">
                {% if android_chrome == false %}
                    <img src="{{ asset( perk.image|replace({'png':'svg'}) ) }}" onerror="{{ asset( perk.image ) }}" class="img-rounded pull-left" style="width: 50%; max-width: 350px; margin: 10px; display:block">
                    <p style="margin-top:10px;font-size:larger">{{ perk.desc }}</p>
                {% else %}
                    <img src="{{ asset( perk.image ) }}" class="img-rounded pull-left" style="width: 50%; max-width: 350px; margin-top: 10px; margin-bottom: 10px; display:block;float: left;">
                    <p style="margin-top:10px;font-size:larger">{{ perk.desc }}</p>
                {% endif %}
            </div>
        </div>
    {% endfor %}
{% endif %}
{% if show != 'all' %}
<button id="perks_button" class="btn btn-success btn-lg perks_button" onclick="loadMorePerks('{{ last_id }}','limited')" style="margin-left:auto;margin-right:auto">View More</button>
<button id="perks_button" class="btn btn-success btn-lg perks_button" onclick="loadMorePerks('{{ last_id }}','all')" style="margin-left:auto;margin-right:auto">View All</button>
{% endif %}